---
import greenBackgroundImage from "../images/green-background-2.png";
import CalendlyButton from "./CalendlyButton";
import Title from "./Title.astro";
import StrategyMenu from "./StrategyMenu.jsx";
const origin = import.meta.env.PUBLIC_DOMAIN;
---

<div
  style={{ 'background-image': `url(${origin}${greenBackgroundImage.src})`}}
  class="pt-[40px] pr-[16px] pl-[16px] md:pt-[120px] md:pl-[80px] md:pr-[80px]"
>
  <Title
    title="Increase your startupâ€™s valuation with your IP strategy team"
    className="text-turqoise-1 text-[45px] font-extrabold leading-[54px] md:text-center md:text-[69px] md:leading-[82px]"
  />
  <div class="flex flex-row justify-center">
    <CalendlyButton
      client:only="react"
      className="w-full md:w-auto justify-center mt-[40px] mb-[40px] md:mt-[64px] md:mb-[64px]"
    />
  </div>
</div>

<div class=" flex flex-col md:flex-row text-body-dark bg-background-light relative pl-[16px] pr-[16px] md:pl-[80px] md:pr-[80px]"> 
  <div
    class="absolute top-0 left-0 w-full h-[162px] md:h-[254px] lg:h-[162px] z-10"
    style={{ 'background-image': `url(${origin}${greenBackgroundImage.src})`}}
  />

  <div class="card z-20 rounded-2xl flex flex-col p-[32px] md:w-1/3 justify-between">
    <div>
      <div class="text-[56px] font-bold leading-[76px] tracking-[0.50px]">100+</div>
      <div class="mt-[48px] text-[20px]">
        <div class="tracking-[0.50px] font-bold leading-[32px]">IP strategies</div>
        <div class="leading-[32px]">created for tech startups.</div>
      </div>
    </div>
    <a href="/#strategy" class="mt-[48px] font-bold tracking-[0.80px] text-[16px] underline">Learn how we create IP Strategies</a href="/#">
  </div>

  <div class="card z-20 rounded-2xl flex flex-col p-[32px] md:w-1/3 justify-between mt-[24px] md:mt-0 md:ml-[24px]">
    <div>
      <div class="text-[56px] font-bold leading-[76px] tracking-[0.50px]">$500M+</div>
      <div class="mt-[48px] text-[20px]">
        <div class="tracking-[0.50px] font-bold leading-[32px]">Supported exits</div>
        <div class="leading-[32px]">including tech startups like ProGlove.</div>
      </div>
    </div>
    <a href="/#stories" class="mt-[48px] font-bold tracking-[0.80px] text-[16px] underline">Read ProGlove case study</a>
  </div>

  <div class="card z-20 rounded-2xl flex flex-col p-[32px] md:w-1/3 mt-[24px] md:mt-0 md:ml-[24px]">
    <div class="text-[56px] font-bold leading-[76px] tracking-[0.50px]">1000+</div>
    <div class="mt-[48px] text-[20px]">
      <div class="tracking-[0.50px] font-bold leading-[32px]">Innovations protected </div>
      <div class="leading-[32px]">including tech startups from Intel Ignite program and other.</div>
    </div>
    <a href="/#startups" class="mt-[48px] font-bold tracking-[0.80px] text-[16px] underline">Read how we coach startups</a>
  </div>
</div>

<div class="bg-background-light pt-[40px] pb-[40px] pl-[16px] pr-[16px] md:p-[80px]">
  <Title title="Safeguard what matters the most" className="text-center capitalize font-extrabold md:font-extrabold md:text-[47px]" />
  <p class="text-blue-2 text-center mt-[32px] md:mt-[42px] text-[16px] font-medium leading-[32px] tracking-[0.50px] md:text-[20px] mb-[64px]">
    For a flat monthly fee your expert IP team takes care of all IP challenges and helps you achieve your goals.
  </p>
  <StrategyMenu client:only="react" />
</div>

<style>
  .card {
    background: linear-gradient(136deg, #CCE7ED 0%, #8DB2BA 100%);
  }
</style>