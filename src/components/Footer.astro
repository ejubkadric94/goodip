---
import Logo from "./Logo.astro";
import { Image } from 'astro:assets';
import LinkedinImage from '../images/linkedin.svg';
import ScrollUp from "./ScrollUp";
const { className } = Astro.props;
---

<div class={`pb-[40px] pt-[40px] pl-[16px] pr-[16px] md:p-[80px] border-t border-t-1 border-border-primary ${className || ""}`}>
  <div class="flex flex-col md:flex-row">
    <div class="mb-[24px] md:mb-0 md:mr-[120px]">
      <Logo />
      <div class="mt-[40px]">
        <a href="https://www.linkedin.com/company/goodip/" target="_blank">
          <Image src={LinkedinImage} alt="Goodip Linkedin page" title="Goodip Linkedin page" width="24" height="24" />
        </a>
      </div>
    </div>
    <div>
      <div class="font-bold text-[16px] text-blue-2 leading-[30px]">GoodIP GmbH</div>
      <div class="font-medium text-[16px] text-blue-2 leading-[30px]">Severinstr. 3a</div>
      <div class="font-medium text-[16px] text-blue-2 leading-[30px]">81541 Munich</div>
      <div class="font-medium text-[16px] text-blue-2 leading-[30px]">Germany</div>
    </div>
  </div>
  <div class="hidden md:block w-full mt-[48px] mb-[48px] h-[1px] bg-border-primary" /> <!-- horizontal border row -->
  <div class="flex flex-col md:flex-row md:justify-between mt-[24px] md:mt-0">
    <div class="text-body-dark hidden md:flex items-center md:mr-[80px] lg:mr-[120px] tracking-[0.80px]">©2023 GoodIP. All rights reserved.</div>
    <div class="flex flex-col md:flex-row md:justify-between md:grow xl:grow-0">
      <a href="/about-us" class="md:mr-[20px] lg:mr-0 tracking-[0.80px] text-body-dark text-[16px] leading-[16px] pt-[8px] pb-[8px]">Company</a>
      <a href="/legal-notice" class="xl:ml-[80px] 2xl:ml-[120px] tracking-[0.80px] text-body-dark text-[16px] leading-[16px] pt-[8px] pb-[8px]">Legal notice</a>
      <a href="/terms-and-conditions" class="xl:ml-[80px] 2xl:ml-[120px] tracking-[0.80px] text-body-dark text-[16px] leading-[16px] pt-[8px] pb-[8px]">Terms and conditions</a>
      <a href="/contact-us" class="xl:ml-[80px] 2xl:ml-[120px] tracking-[0.80px] text-body-dark text-[16px] leading-[16px] pt-[8px] pb-[8px]">Contact us</a>
    </div>
  </div>
  <div class="md:hidden w-full mt-[24px] mb-[24px] h-[1px] bg-border-primary" /> <!-- horizontal border row -->
  <div class="md:hidden text-body-dark flex items-center">©2023 GoodIP. All rights reserved.</div>
  <ScrollUp client:only="react" />
</div>